{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": ".",

    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },

    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "moduleResolution": "node",
    "skipLibCheck": true,

    "types": ["vite/client"]
  },
  "include": [
    ".react-router/types/**/*",
    "remix.config.mjs",
    "app/**/*",
    "**/*.d.ts",
    "scripts"
  ],
  "exclude": ["node_modules", "build"]
}
